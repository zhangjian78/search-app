<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:visibility="gone"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/bottom_ad_banner">


    <ImageView
        android:id="@+id/iv_drive"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/ad_drive_blue_bg" />


    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="3dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:iss_auto_cycle="true"
        app:iss_delay="0"
        app:iss_period="1000"
        app:iss_selected_dot="@drawable/dot_null"
        app:iss_title_background="@color/null_color"
        app:iss_unselected_dot="@drawable/dot_null" />

<!--    <Space-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_weight="1"/>-->

    <ImageView
        android:id="@+id/iv_gmail"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/ad_gmail_red_bg" />

</LinearLayout>